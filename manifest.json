{
    "manifest_version": 2,
 
    "name": "UA Post Mед", //es6
    "description": "Помощь в обработке данных для посылок",
    "version": "2.0.2",
 
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "UA Post",
        "default_popup": "popup.html"
    },

    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
 
    "permissions": [
    "activeTab",
     "storage",
     "tabs",
    "storage",
    "file://*/*",
    "<all_urls>"
  ]
}
